<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.umeng.soexample.yuekao12moni.ShouyeFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <EditText
            android:layout_weight="6"
            android:id="@+id/edit_news"
            android:hint="搜索"
            android:padding="10dp"
            android:background="@drawable/yuanjiao_kuang"
            android:layout_width="0dp"
            android:layout_height="40dp" />
        <Button
            android:layout_weight="1"
            android:id="@+id/btn_sou"
            android:text="搜索"
            android:layout_width="0dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <com.recker.flybanner.FlyBanner
        android:id="@+id/fly_banner"
        android:layout_width="match_parent"
        android:layout_height="240dp"></com.recker.flybanner.FlyBanner>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>


</LinearLayout>
